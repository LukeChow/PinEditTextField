<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pin Edit Text Field"/>

    <com.poovam.pinedittextfield.SquarePinField
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textSelectHandle="@drawable/text_handle"
        app:noOfFields="4"
        app:distanceInBetween="10dp"
        app:fieldBgColor="#ddd"
        app:fieldColor="@color/colorPrimary"
        app:highlightColor="@color/colorAccent"
        app:highlightType="allFields"
        android:text="****"
        android:id="@+id/squareField"
        app:cornerRadius="10dp"
        android:layout_marginTop="15dp"/>

    <com.poovam.pinedittextfield.LinePinField
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:textSelectHandle="@drawable/text_handle"
        app:isCursorEnabled="true"
        app:lineThickness="0.5dp"
        android:hint="Type your pin here"
        app:fieldColor="#000000"
        app:highlightSingleFieldMode="true"
        app:highlightEnabled="false"
        app:highlightType="completedFields"
        android:id="@+id/lineField"
        android:layout_marginTop="10dp"/>

    <com.poovam.pinedittextfield.CirclePinField
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:fieldBgColor="#ddd"
        android:textSize="16sp"
        app:noOfFields="3"
        android:textSelectHandle="@drawable/text_handle"
        app:circleRadius="15dp"
        app:fillerRadius="10dp"
        android:id="@+id/circleField"
        android:layout_marginTop="15dp"/>

    <com.poovam.pinedittextfield.CirclePinField
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="16sp"
        app:noOfFields="3"
        android:textSelectHandle="@drawable/text_handle"
        app:circleRadius="15dp"
        app:fillerRadius="10dp"
        app:fieldColor="@color/colorAccent"
        android:text="111"
        android:id="@+id/circleField1"
        android:layout_marginTop="15dp"/>

    <com.poovam.pinedittextfield.SquarePinField
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textSelectHandle="@drawable/text_handle"
        app:noOfFields="4"
        app:distanceInBetween="10dp"
        app:fieldColor="@color/colorPrimary"
        app:highlightColor="@color/colorAccent"
        app:highlightType="currentField"
        android:hint="hint"
        android:id="@+id/squareField1"
        android:layout_marginTop="15dp"/>
</LinearLayout>
